<h1>Sylvester's Burgers</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burger_data_hb}}
          {{#unless this.devoured}}
            <div class="col-xs-9 text center">
                <pre>{{this.id}} {{this.burger_name}}</pre>
            </div>
            <div class="col-xs-3 text-center">
              <form method="POST" action="/burgers/update" class="button-size">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                
                <button type="submit" class="btn btn-default">Devour It!</button>
                 
              </form>
            </div>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burger_data_hb}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                <pre>{{this.burger_name}}</pre>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>


